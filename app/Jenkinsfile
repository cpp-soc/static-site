pipeline {
    agent any

    environment {
        APP_DIR      = "/opt/docker/site/static-site/app"  // where Dockerfile lives
        PROD_DIR     = "/opt/docker/site"                  // where compose.yml lives
        IMAGE_TAG    = "static-site:latest"
        SERVICE_NAME = "static-site"
    }

    triggers {
        pollSCM('H/5 * * * *')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build image on host Docker') {
            steps {
                sh """
                cd ${APP_DIR}
                docker build -t ${IMAGE_TAG} -f Dockerfile .
                """
            }
        }

        stage('Restart prod with docker compose') {
            steps {
                sh """
                cd ${PROD_DIR}
                docker compose up -d ${SERVICE_NAME}
                """
            }
        }
    }

    post {
        success {
            echo "✅ Deploy succeeded. ${IMAGE_TAG} is now running."
        }
        failure {
            echo "❌ Deploy failed. Check logs."
        }
    }
}

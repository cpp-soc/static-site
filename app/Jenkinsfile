pipeline {
    agent any

    environment {
        PROD_DIR     = "/opt/docker/site/app"
        IMAGE_TAG    = "static-site:latest"
        SERVICE_NAME = "static-site"
    }

    triggers {
        pollSCM('H/5 * * * *')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build static-site:latest on host Docker') {
            steps {
                // IMPORTANT:
                // The working directory here is the Jenkins workspace.
                // That workspace MUST contain your Dockerfile and all app code.
                sh """
                docker build -t ${IMAGE_TAG} -f Dockerfile .
                """
            }
        }

        stage('Recreate container with docker compose from /opt/docker/site') {
            steps {
                sh """
                cd ${PROD_DIR}
                docker compose up -d ${SERVICE_NAME}
                """
            }
        }
    }

    post {
        success {
            echo "✅ Deploy succeeded. ${IMAGE_TAG} is now running."
        }
        failure {
            echo "❌ Deploy failed. Check logs."
        }
    }
}
